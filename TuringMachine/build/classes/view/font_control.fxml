<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<fx:root fx:id="fontControlTabs" prefHeight="300.0" prefWidth="320.0" type="TabPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <tabs>
      <Tab fx:id="fontTab" closable="false" text="Font Options">
         <content>
            <javafx.scene.layout.VBox prefHeight="250.0" prefWidth="300.0">
               <AnchorPane prefHeight="267.0" prefWidth="315.0">
                  <children>
                        <Label layoutX="25.0" layoutY="136.0" text="Size" />
                        <TextFlow fx:id="previewBar" layoutX="1.0" layoutY="22.0" prefHeight="57.0" prefWidth="320.0" textAlignment="CENTER" />
                        <Label layoutX="25.0" layoutY="100.0" text="Font" />
                        <CheckBox fx:id="italicCheckBox" layoutX="109.0" layoutY="178.0" mnemonicParsing="false" onAction="#italicCheckBoxClicked" text="Italic" />
                        <CheckBox fx:id="boldCheckBox" layoutX="35.0" layoutY="178.0" mnemonicParsing="false" onAction="#boldCheckBoxClicked" text="Bold" />
                        <ComboBox fx:id="sizeChooserBox" layoutX="66.0" layoutY="130.0" prefHeight="26.0" prefWidth="92.0" />
                        <ComboBox fx:id="fontChooserBox" layoutX="66.0" layoutY="95.0" prefHeight="26.0" prefWidth="195.0" />
                        <Label layoutX="4.0" layoutY="3.0" text="Preview" />
                     <Button id="button" fx:id="acceptButton" layoutX="14.0" layoutY="228.0" mnemonicParsing="false" onAction="#acceptChanges" prefHeight="26.0" prefWidth="133.0" text="Accept Changes" stylesheets="@machineViewStyle.css"/>
                     <Button id="button" fx:id="cancelButton" layoutX="189.0" layoutY="228.0" mnemonicParsing="false" onAction="#cancelChanges" prefHeight="26.0" prefWidth="111.0" text="Cancel" stylesheets="@machineViewStyle.css"/>
                     <CheckBox fx:id="fontDefaultToggle" layoutX="182.0" layoutY="178.0" mnemonicParsing="false" onAction="#makeFontDefault" text="Make Default" />
                  </children>
               </AnchorPane>
            </javafx.scene.layout.VBox>
         </content>
      </Tab>
      <Tab fx:id="RWHeadTab" closable="false" text="RWHead Options">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <ColorPicker fx:id="RWColorPicker" layoutX="80.0" layoutY="121.0" />
                  <Label layoutX="37.0" layoutY="95.0" text="Read/Write Head Highlighting Color" />
                  <Label layoutX="14.0" layoutY="6.0" text="Preview" />
                  <TextFlow fx:id="RWPreviewBar" layoutX="2.0" layoutY="22.0" prefHeight="71.0" prefWidth="320.0" textAlignment="CENTER" />
                  <Button id="button" fx:id="RWacceptButton" layoutX="16.0" layoutY="228.0" mnemonicParsing="false" onAction="#acceptChanges" prefHeight="26.0" prefWidth="133.0" text="Accept Changes" stylesheets="@machineViewStyle.css"/>
                  <Button id="button" fx:id="RWcancelButton" layoutX="191.0" layoutY="228.0" mnemonicParsing="false" onAction="#cancelChanges" prefHeight="26.0" prefWidth="111.0" text="Cancel" stylesheets="@machineViewStyle.css"/>
                  <CheckBox fx:id="RWDefaultToggle" layoutX="98.0" layoutY="165.0" mnemonicParsing="false" onAction="#makeRWDefault" text="Make Default" />
               </children>
          </AnchorPane>
        </content>
      </Tab>
   </tabs>
</fx:root>
