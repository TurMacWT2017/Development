<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<fx:root prefHeight="300.0" prefWidth="300.0" type="TabPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <tabs>
      <Tab text="Font Options">
         <content>
            <javafx.scene.layout.VBox prefHeight="250.0" prefWidth="300.0">
               <AnchorPane prefHeight="250.0" prefWidth="300.0">
                  <children>
                        <Label layoutX="25.0" layoutY="136.0" text="Size" />
                        <TextFlow fx:id="previewBar" layoutX="1.0" layoutY="39.0" prefHeight="40.0" prefWidth="300.0" textAlignment="CENTER" />
                        <Label layoutX="25.0" layoutY="88.0" text="Font" />
                        <CheckBox fx:id="italicCheckBox" layoutX="154.0" layoutY="177.0" mnemonicParsing="false" onAction="#italicCheckBoxClicked" text="Italic" />
                        <CheckBox fx:id="boldCheckBox" layoutX="66.0" layoutY="178.0" mnemonicParsing="false" onAction="#boldCheckBoxClicked" text="Bold" />
                        <ComboBox fx:id="sizeChooserBox" layoutX="66.0" layoutY="130.0" prefHeight="26.0" prefWidth="92.0" />
                        <ComboBox fx:id="fontChooserBox" layoutX="67.0" layoutY="83.0" prefHeight="26.0" prefWidth="195.0" />
                        <Label layoutX="4.0" layoutY="3.0" text="Preview" />
                     <Button fx:id="acceptButton" layoutX="14.0" layoutY="211.0" mnemonicParsing="false" onAction="#acceptChanges" prefHeight="26.0" prefWidth="133.0" text="Accept Changes" />
                     <Button fx:id="cancelButton" layoutX="179.0" layoutY="211.0" mnemonicParsing="false" onAction="#cancelChanges" prefHeight="26.0" prefWidth="111.0" text="Cancel" />
                  </children>
               </AnchorPane>
            </javafx.scene.layout.VBox>
         </content>
      </Tab>
      <Tab text="RWHead Options">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <ColorPicker fx:id="RWColorPicker" layoutX="80.0" layoutY="108.0" />
                  <Label layoutX="37.0" layoutY="87.0" text="Read/Write Head Highlighting Color" />
                  <Label layoutX="14.0" layoutY="6.0" text="Preview" />
                  <TextFlow fx:id="RWPreviewBar" layoutX="2.0" layoutY="22.0" prefHeight="64.0" prefWidth="294.0" textAlignment="CENTER" />
               </children></AnchorPane>
        </content>
      </Tab>
   </tabs>
</fx:root>
